<form action = "/figures" method = "post" >
  Figure Name: <input type = "text" name = "figure[name]" id = "figure_name">
<br></br>

<h2>Titles</h2>
  <% Title.all.each do |title| %>
    <input type = "checkbox" name = "figure[title_ids][]" id = "title_<%=title.id %>" value = "<%=title.id %>" ><%=title.name %></input><br>
  <% end %>

<h2>Landmarks</h2>
  <% Landmark.all.each do |landmark| %>
    <input type = "checkbox" name = "figure[landmark_ids][]" id = "landmark_<%=landmark.id %>" value = "<%=landmark.id %>" ><%=landmark.name %></input><br>
  <% end %>

<h2>And/or create a new title</h2>
  Title Name: <input type = "text" name = "title[name]"  id = "new_title"><br>

<h2>And/or create a new landmark</h2>
  Landmark Name: <input type = "text" name = "landmark[name]"  id = "new_landmark"><br>

  <input type = "submit" id = "Create New Figure" value = "Create" style = "color: blue; background-color: orange; border: 0; font-size: 1.5em;">
</form>
